
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href=@Url.Content("~/Content/template/Login/images/icons/favicon.ico") />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/bootstrap/css/bootstrap.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/animate/animate.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/css-hamburgers/hamburgers.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/animsition/css/animsition.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/select2/select2.min.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/vendor/daterangepicker/daterangepicker.css")>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/css/util.css")>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/template/Login/css/main.css")>
    <!--===============================================================================================-->
</head>
<body style="background-color: #beab59;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-43">
                        Login to continue
                    </span>


                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="email" id="email">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="pass" id="password">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Forgot Password?
                            </a>
                        </div>
                    </div>


                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="button" id="login"  >
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-46 p-b-20">
                        <span class="txt2">
                            OR
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Sign Up
                        </button>
                    </div>

                </form>

                <div class="login100-more" style="background-image: url('/Content/template/Login/img/background.png');">
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/jquery/jquery-3.2.1.min.js")></script>

    <script>


        $(document).ready(function () {
            //function will be called on button click having id btnsave
            $("#login").click(function () {
                var email = $("#email").val();
                var password = $("#password").val();


                $.ajax({
                    type: "post",
                    url: "/Login/login", // Controller/View
                    data: {em :email, pass:password},

                    success: function (response) {
                        if(response == true)
                        {
                            window.location="/Shop/Index"
                        }
                        else
                        {
                            alert("Username OR Password not verified");
                            location.reload();
                        }
                    }


                });
            });
        });

    </script><!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/animsition/js/animsition.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/bootstrap/js/popper.js")></script>
    <script src=@Url.Content("~/Content/template/Login/vendor/bootstrap/js/bootstrap.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/select2/select2.min.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/daterangepicker/moment.min.js")></script>
    <script src=@Url.Content("~/Content/template/Login/vendor/daterangepicker/daterangepicker.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/vendor/countdowntime/countdowntime.js")></script>
    <!--===============================================================================================-->
    <script src=@Url.Content("~/Content/template/Login/js/main.js")></script>

</body>
</html>